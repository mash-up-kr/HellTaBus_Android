<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HealthyUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/exercise_top</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/spoqa_han_sans</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
    </style>

    <style name="ToolbarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">14sp</item>
        <item name="titleMarginStart">120dp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    <style name="ExpandedToolbarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>
</resources>
